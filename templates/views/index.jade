extends ../layouts/default

block content
  .jumbotron.home
    .jumbotron.layer
      .container
        h1 CRARL
        h2 Centro di Riferimento Alcologico della Regione Lazio
        h3 Documenti, informazioni scientifiche e risorse sul tema dell'alcolismo

  .container
    div.row
      div.news.col-md-6
        h3 Ultime notizie
          ul.list-unstyled
            each n in data.news
              li  
                div.header
                  h5.date #{n._.publishedDate.format('D/M/YYYY')}
                  span.title 
                    a(href='/notizia/' + n.slug)= n.title
                div.brief
                  span!= n.content.brief
        div 
          a(href='/notizie/') leggi tutte le notizie
      div.docs.col-md-6
        h3 Documenti recenti
          ul.list-unstyled
            each d in data.documents
              li  
                div.header
                  h5.title 
                    a(href='/documento/' + d.slug)= d.title
                div.brief
                  span!= d.content.brief
        div 
          a(href='/documenti/') consulta tutti i documenti disponibili

