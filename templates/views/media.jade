extends ../layouts/default

mixin post(post)
	.post(data-ks-editable=editable(user, { list: 'File', id: post.id }))
		h2: a(href='/documenti/file/' + post.slug)= post.title
		p.lead.text-muted Posted
			if post.publishDate
				| on #{post._.publishedDate.format('MMMM Do, YYYY')} 
			if post.categories && post.categories.length
				|  in 
				each cat, i in post.categories
					a(href='/documenti/' + cat.key)= cat.name
					if i < post.categories.length - 1
						| , 
					else
						|  
			if post.author
				| by #{post.author.name.first}
		if post.image.exists
			img(src=post._.image.fit(160,160)).img.pull-right
		p!= post.content.brief
		if post.content.extended
			p.read-more: a(href='/documenti/file/' + post.slug) Read more...

block intro
	.container
		h3= data.category ? 'Documenti - ' + data.category.name : 'Documenti'

block content
	.container: .row
		.col-sm-8.col-md-9
			if filters.category && !data.category
				h3.text-muted Invalid Category.
			else
				if data.files.results.length
					if data.files.totalPages > 1
						h4.text-weight-normal Showing 
							strong #{data.files.first}
							|  to 
							strong #{data.files.last}
							|  of 
							strong #{data.files.total}
							|  files.
					else
						h4.text-weight-normal Showing #{utils.plural(data.files.results.length, '* post')}.
					.documenti
						each post in data.files.results
							+post(post)
					
					if data.files.totalPages > 1
						ul.pagination
							if data.files.previous
								li: a(href='?page=' + data.files.previous): span.entypo.entypo-chevron-thin-left <
							else
								li.disabled: a(href='?page=' + 1): span.entypo.entypo-chevron-thin-left <
							each p, i in data.files.pages
								li(class=data.files.currentPage == p ? 'active' : null)
									a(href='?page=' + (p == '...' ? (i ? data.files.totalPages : 1) : p ))= p
							if data.files.next
								li: a(href='?page=' + data.files.next): span.entypo.entypo-chevron-thin-right >
							else
								li.disabled: a(href='?page=' + data.files.totalPages): span.entypo.entypo-chevron-thin-right >
				else
					if data.category
						h3.text-muted There are no files in the category #{data.category.name}.
					else
						h3.text-muted There are no files yet.
		
		if data.categories.length
			.col-sm-4.col-md-3
				<h2 class="side"> Categories </h2>

				.list-group
					a(href='/documenti', class=!data.category ? 'active' : false).list-group-item All Categories
					each cat in data.categories
						a(href='/documenti/' + cat.key, class=data.category && data.category.id == cat.id ? 'active' : false).list-group-item= cat.name 